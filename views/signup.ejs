<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Знакомства, Общение, Форум">
    <meta name="description" content="Знакомства, Общение, Форум">
    <link rel="stylesheet" type="text/css" href="/public/css/main.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Home</title>
  </head>
  <body id="body">
    <%- include('./partials/navbar2.ejs') %> <% if (token) { %> <%-
    include('./partials/loginbar.ejs') %> <% } else { %> <%-
    include('./partials/logoutbar.ejs') %> <% } %>
    <div class="container">
      <% if (!token) { %>
      <h1>Register</h1>
      <div class="mx-auto p-2" style="width: 200px;">
        <div class="signinForm">
          <form action="/signup" method="POST">
            <div class="mb-3">
              <label for="user" class="form-label">Username:</label>
              <input
                name="name"
                type="text"
                class="form-control"
                id="user"
                style="text-transform: lowercase"
                required
              />

            </div>
            <div class="mb-3">
              <label for="pass" class="form-label">Password:</label>
              <input
                type="password"
                name="pass"
                class="form-control"
                id="pass"
                style="text-transform: lowercase"
                required
              />
            </div>
            <div class="mb-3">
              <input type="submit" value="Register" />
            </div>
          </form>
        </div>
        <p><% if (response) { %>

          <div class="alert alert-primary" role="alert"><%= response %></div>
          <% } %>
          </p>
      </div>
      <% } else if (token) { %> <%- include('./partials/profile.ejs') %> <% } %>
     
    </div>
  </body>
</html>
