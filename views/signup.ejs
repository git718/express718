<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Главная</title>
  </head>
  <body id="body">
    <%- include('./partials/navbar2.ejs') %> <% if (token) { %> <%-
    include('./partials/loginbar.ejs') %> <% } else { %> <%-
    include('./partials/logoutbar.ejs') %> <% } %>
    <div class="container">
      <% if (!token) { %>
      <h1>Регистрация</h1>
      <div class="signinForm">
        <form action="/signup" method="POST">
          <div class="mb-3">
            <label for="user" class="form-label">Ник:</label>
            <input
              name="name"
              type="text"
              class="form-control"
              id="user"
              style="text-transform: lowercase"
              required
            />
          </div>
          <div class="mb-3">
            <label for="pass" class="form-label">Пароль:</label>
            <input
              type="password"
              name="pass"
              class="form-control"
              id="pass"
              style="text-transform: lowercase"
              required
            />
          </div>
          <div class="mb-3">
            <input type="submit" value="Заригистрировать" />
          </div>
        </form>
      </div>
      <% } else if (token) { %> <%- include('./partials/profile.ejs') %> <% } %>
      <p><% if (response) { %></p>

      <div class="alert alert-primary" role="alert"><%= response %></div>
      <% } %>
    </div>
  </body>
</html>
