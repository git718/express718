<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Auto</title>
  </head>
  <body id="body">


    <%- include('./partials/navbar2.ejs') %> <% if (token) { %> <%-
    include('./partials/loginbar.ejs') %> <% } else { %> <%-
    include('./partials/logoutbar.ejs') %> <% } %>


    <div class="container">

      <form action="/postauto" method="post" enctype="multipart/form-data">
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control" value="<%= user %>" aria-label="Username" name="username" aria-describedby="basic-addon1">
      </div>
      
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Nissan" aria-label="Car brand" name="brand" aria-describedby="basic-addon2">
      </div>

      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Rogue" aria-label="Car model" name="model" aria-describedby="basic-addon2">
      </div>

      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="2025" aria-label="Year"  name="year" aria-describedby="basic-addon2">
      </div>
      
      
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"  name="amount" >
        <span class="input-group-text">.00</span>
      </div>
      
      <div class="input-group">
        <span class="input-group-text">Description</span>
        <textarea class="form-control" aria-label="Description"  name="description" ></textarea>
      </div>
      <div class="input-group">
        <input type="file" id="file-input" name="files0">
        <input type="file" id="file-input" name="files1">
        <input type="file" id="file-input" name="files2">
        <input type="file" id="file-input" name="files3">
        <input type="file" id="file-input" name="files4">

      </div>
        <input type="submit" value="post">
      </form>
      <p>
        <% if (response) { %>
          <div class="alert alert-primary" role="alert">
             <%= response %>
          </div>
        <% } %>
      </p>

    </div>
  </body>
</html>















